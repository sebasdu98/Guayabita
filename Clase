//                System.out.println("GLobal lose "+ a);
                    break;
                case 2:
                    System.out.println("Ganaj1");

                    Apuesta(DineroJ1(DineroJ1(a + Maz(400))), DineroJ2(b), 7);

                    break;
                case 7:
                    System.out.println("apostandoj1//////");

                    System.out.println("Global j1 " + a + " global j2 " + b);
                    c = 1;
                    break;

            }
            j1++;
        }
        control++;    //evito que vuelva a entrar a mov de J1
        if (j1 > 1 && j1 < 3) {
            System.out.println("apuesta//////////j2 " + "valor de c " + c);
            switch (c) {
                case 1:
                    System.out.println("Pierde j2");
                    Apuesta(DineroJ1(DineroJ1(a)), DineroJ2(DineroJ2(b - Minima(100))), 2);
//                System.out.println("GLobal lose "+ a);
                    break;
                case 2:
                    System.out.println("Gana j2");

                    Apuesta(DineroJ1(DineroJ1(a)), DineroJ2(DineroJ2(b + Maz(200))), 7);

                    break;
                case 7:

                    System.out.println("Global j1 " + a + " global j2 " + b); /// aca colocar UNA CONDICION LA CUAL INVOQUE LANZAR EL DADO DE J1

                    break;

            }
        }
//        if(a>0 && b>0){
//            //Jugar(lanzar(),0);
////        Apuesta(DineroJ1(DineroJ1(a-Minima(100))),DineroJ2(DineroJ2(b-Minima(100))),7);
//        }else{
//            if(a==0){
//                 System.out.println("Perdio A");
//            }else{
//                 System.out.println("Perdio B");
//            }
