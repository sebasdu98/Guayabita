    static int j1 = 1;
    static int control = 0;

    public static void Apuesta(int a, int b, int c) {

        System.out.println("Plata de A " + a + "----" + "Plata de B " + b);
        System.out.println("dado " + c);

        if (j1 == 1 && control == 0) {
            switch (c) {
                case 1:
                    System.out.println("Pierdej1");
                    Apuesta(DineroJ1(DineroJ1(a - Minima(100))), DineroJ2(b), 2);
