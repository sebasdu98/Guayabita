    public static int lanzar() {
        return (int) ((Math.random() * 6) + 1);
    }
    static int a = 2;       //Asignaciones de prueba
    static int b = 3;

    public static int Jugar(int act, int ant) {
        System.out.println(act + " --" + ant);
        if (a < b) {
            a++;
//            Jugar(lanzar(), act);
            System.out.println("valor1 " + act);
